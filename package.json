{
  "name": "JHOVE2020-demo",
  "productName": "JHOVE 2020 Demonstrator",
  "version": "0.1.0",
  "description": "JHOVE 2020 proof of concept demonstrator.",
  "author": {
    "name": "Carl Wilson",
    "email": "carl@openpreservation.org",
    "url": "https://github.com/carlwilson"
  },
  "copyright": "Â© 2020, Open Preservation Foundation",
  "homepage": "https://openpreservation.org/products/jhove2020",
  "repository": "https://github.com/opf-labs/jhove2020-demo",
  "license": "MIT",
  "keywords": [
    "Open Preservation Foundation",
    "JHOVE",
    "JHOVE2020",
    "demo"
  ],
  "main": "src/main.js",
  "build": {
    "appId": "jhove-2020",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^7.1.2",
    "electron-builder": "^22.3.2"
  },
  "dependencies": {
    "npm": "^6.13.4"
  }
}
